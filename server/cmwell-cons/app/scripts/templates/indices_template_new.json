{
  "index_patterns": "cm_well_*",
  "order": 0,
  "settings": {
    "number_of_shards": {{number_of_shards}},
    "number_of_replicas": {{number_of_replicas}},
    "analysis": {
      "analyzer": {
        "parent_hierarchy_analyzer": {
          "tokenizer": "path_hierarchy",
          "type": "custom"
        }
      }
    },
    "index.unassigned.node_left.delayed_timeout": "15m",
    "index.mapping.total_fields.limit": 25000
  },
  "aliases":{
    "cm_well_all":{}
  },
  "mappings": {
    "infoclone": {
      "date_detection": false,
      "numeric_detection": false,
      "dynamic_templates": [
        {
          "date_field_template": {
            "path_match": "*.d$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "date",
              "store": "false",
              "include_in_all": "true",
              "norms": false
            }
          }
        },
        {
          "int_field_template": {
            "path_match": "*.i$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "integer",
              "store": "false",
              "include_in_all": "true"
            }
          }
        },
        {
          "long_field_template": {
            "path_match": "*.l$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "long",
              "store": "false",
              "include_in_all": "true"
            }
          }
        },
        {
          "float_field_template": {
            "path_match": "*.f$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "float",
              "store": "false",
              "include_in_all": "true"
            }
          }
        },
        {
          "double_field_template": {
            "path_match": "*.w$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "double",
              "store": "false",
              "include_in_all": "true"
            }
          }
        },
        {
          "bool_field_template": {
            "path_match": "*.b$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "boolean",
              "store": "false",
              "include_in_all": "true"
            }
          }
        },
        {
          "string_template": {
            "path_match": "*.*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "text",
              "fields": {
                "{name}%exact": {
                  "type": "keyword",
                  "store": "false",
                  "include_in_all": "false"
                }
              }
            }
          }
        }
      ],
      "properties": {
        "content": {
          "properties": {
            "data": {
              "type": "text",
              "norms": false
            },
            "length": {
              "type": "long",
              "store": "true"
            },
            "mimeType": {
              "type": "keyword",
              "store": "true",
              "norms": false
            }
          }
        },
        "link":{
          "properties": {
            "to" : {
              "type": "keyword",
              "store": true,
              "norms": false
            },
            "kind": {
              "type": "integer",
              "store": true
            }
          }
        },
        "system": {
          "properties": {
            "lastModified": {
              "type": "date",
              "store": "true",
              "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
            },
            "parent":{
              "type":"keyword",
              "fields": {
                "parent_hierarchy": {
                  "type":"text",
                  "store": "false",
                  "index_options" : "docs",
                  "norms": false,
                  "term_vector": "no",
                  "analyzer": "parent_hierarchy_analyzer"
                }
              }
            },
            "kind": {
              "type": "keyword",
              "store": true,
              "norms": false
            },
            "path": {
              "type": "keyword",
              "store": true,
              "norms": false
            },
            "uuid": {
              "type": "keyword",
              "store": true,
              "norms": false
            },
            "dc": {
              "type": "keyword",
              "store": true,
              "norms": false
            },
            "indexTime": {
              "type": "long",
              "store": true
            },
            "quad" : {
              "type": "keyword",
              "store": false,
              "norms": false
            },
            "current": {
              "type": "boolean",
              "store": false
            }
          }
        }
      }
    }
  }
}