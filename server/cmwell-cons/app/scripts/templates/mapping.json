{
  "template": "*cmwell*",
  "order": 0,
  "settings": {
    "number_of_shards": {{number_of_shards}},
    "number_of_replicas":{{number_of_replicas}},
    "analysis": {
      "analyzer": {
        "parent_hierarchy_analyzer": {
          "tokenizer": "path_hierarchy",
          "type": "custom"
        }
      }
    }
  },
  "mappings": {
    "infoclone": {
      "date_detection": false,
      "numeric_detection": false,
      "dynamic_templates": [
        {
          "date_field_template": {
            "path_match": "fields.d$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "date",
              "index": "not_analyzed",
              "store": "false",
              "include_in_all": "true",
              "omit_norms": true
            }
          }
        },
        {
          "int_field_template": {
            "path_match": "fields.i$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "integer",
              "index": "not_analyzed",
              "store": "false",
              "include_in_all": "true",
              "omit_norms": true
            }
          }
        },
        {
          "long_field_template": {
            "path_match": "fields.l$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "long",
              "index": "not_analyzed",
              "store": "false",
              "include_in_all": "true",
              "omit_norms": true
            }
          }
        },
        {
          "float_field_template": {
            "path_match": "fields.f$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "float",
              "index": "not_analyzed",
              "store": "false",
              "include_in_all": "true",
              "omit_norms": true
            }
          }
        },
        {
          "double_field_template": {
            "path_match": "fields.w$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "double",
              "index": "not_analyzed",
              "store": "false",
              "include_in_all": "true",
              "omit_norms": true
            }
          }
        },
        {
          "bool_field_template": {
            "path_match": "fields.b$*",
            "match_mapping_type": "*",
            "mapping": {
              "type": "boolean",
              "index": "not_analyzed",
              "store": "false",
              "include_in_all": "true",
              "omit_norms": true
            }
          }
        },
        {
          "string_template": {
            "path_match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "multi_field",
              "fields": {
                "{name}": {
                  "type": "string",
                  "index": "analyzed",
                  "analyzer": "default",
                  "store": "false",
                  "include_in_all": "true",
                  "omit_norms": true
                },
                "%exact": {
                  "type": "string",
                  "index": "not_analyzed",
                  "store": "false",
                  "path": "just_name",
                  "include_in_all": "false",
                  "omit_norms": true
                }
              }
            }
          }
        }
      ],
      "_id": {
        "path": "system.uuid"
      },
      "properties": {
        "content": {
          "properties": {
            "base64-data": {
              "type": "string",
              "index": "not_analyzed",
              "omit_norms": true
            },
            "data": {
              "type": "string",
              "omit_norms": true
            },
            "length": {
              "type": "long",
              "store": "yes"
            },
            "mimeType": {
              "type": "string",
              "index": "not_analyzed",
              "store": "yes",
              "omit_norms": true
            }
          }
        },
        "system": {
          "properties": {
            "lastModified": {
              "type": "date",
              "store": "yes",
              "format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'"
            },
            "parent": {
              "type": "multi_field",
              "fields": {
                "parent": {
                  "type": "string",
                  "index": "not_analyzed",
                  "store": "false",
                  "omit_norms": true
                },
                "parent_hierarchy": {
                  "type": "string",
                  "path": "just_name",
                  "store": "false",
                  "index_options": "docs",
                  "omit_norms": true,
                  "term_vector": "no",
                  "analyzer": "parent_hierarchy_analyzer",
                  "index": "analyzed"
                }
              }
            },
            "path": {
              "type": "string",
              "index": "not_analyzed",
              "store": "yes",
              "omit_norms": true
            },
            "uuid": {
              "type": "string",
              "index": "not_analyzed",
              "store": "yes",
              "omit_norms": true
            },
            "dc": {
              "type": "string",
              "index": "not_analyzed",
              "store": "false",
              "omit_norms": true
            },
            "indexTime": {
              "type": "long",
              "store": "false",
              "omit_norms": true
            },
            "quad" : {
              "type": "string",
              "index": "not_analyzed",
              "store": "false",
              "omit_norms": true
            },
            "protocol" : {
              "type": "string",
              "index": "not_analyzed",
              "store": "false",
              "omit_norms": true
            }
          }
        }
      }
    }
  }
}